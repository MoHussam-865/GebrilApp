<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/itemsChooseFragment"
        android:name="com.android_a865.gebril_app.feature_main.shopping.ShoppingFragment"
        tools:layout="@layout/fragment_items_choose">
        <action
            android:id="@+id/action_itemsChooseFragment_to_newEstimateFragment"
            app:destination="@id/newEstimateFragment" />
        <argument
            android:name="items"
            app:argType="com.android_a865.gebril_app.data.domain.InvoiceItem[]"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="invoiceId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/newEstimateFragment"
        android:name="com.android_a865.gebril_app.feature_main.cart.CartFragment"
        tools:layout="@layout/fragment_cart">
        <argument
            android:name="items"
            app:argType="com.android_a865.gebril_app.data.domain.InvoiceItem[]" />
        <action
            android:id="@+id/action_newEstimateFragment_to_viewPdfFragment"
            app:destination="@id/viewPdfFragment" />
        <argument
            android:name="invoiceId"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/viewPdfFragment"
        android:name="com.android_a865.gebril_app.feature_main.pdf_preview.ViewPdfFragment"
        tools:layout="@layout/fragment_view_pdf">
        <argument
            android:name="invoice"
            app:argType="com.android_a865.gebril_app.data.entities.Invoice" />
        <action
            android:id="@+id/action_viewPdfFragment_to_mainFragment3"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.android_a865.gebril_app.feature_main.main_page.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment3_to_itemsChooseFragment"
            app:destination="@id/itemsChooseFragment" />
        <action
            android:id="@+id/action_mainFragment3_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.android_a865.gebril_app.feature_main.history.HistoryFragment"
        android:label="@string/my_name"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/action_historyFragment_to_itemsChooseFragment"
            app:destination="@id/itemsChooseFragment" />
    </fragment>
</navigation>